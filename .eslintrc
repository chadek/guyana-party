{
  "root": true,
  "extends": ["eslint:recommended", "standard"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "plugins": ["babel"],
  "rules": {
    "no-debugger": 0,
    "no-alert": 0,
    "no-console": 0,
    "no-unused-vars": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "comma-dangle": 1,
    "import/prefer-default-export": 1,
    "babel/new-cap": 1,
    "babel/no-invalid-this": 0,
    "babel/object-curly-spacing": 0,
    "babel/quotes": 0,
    "babel/semi": 0,
    "babel/no-unused-expressions": 1,
    "babel/valid-typeof": 1
  }
}
