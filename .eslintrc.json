{
  "root": true,
  "extends": ["alloy"],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["babel"],
  "rules": {
    "no-debugger": 1,
    "no-alert": 0,
    "no-console": 0,
    "no-var": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "radix": ["error", "as-needed"],
    "no-shadow": [
      2,
      {
        "hoist": "all",
        "allow": ["resolve", "reject", "done", "next", "err", "error"]
      }
    ],
    "indent": 0,
    "max-params": ["error", 4],
    "no-invalid-this": 0, // for arrow functions
    "babel/no-invalid-this": 1,
    "babel/new-cap": 1,
    "babel/no-unused-expressions": 1,
    "babel/valid-typeof": 1
  }
}
