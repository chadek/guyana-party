extends layout

block customStyle
  link(rel="stylesheet", href="/vendor/jquery/jquery-clockpicker.min.css")
  link(rel="stylesheet", href="/vendor/ol/ol.css")

block content
  .pure-g
    .pure-u-1.content
      .pure-u-1.text-center
        h2= title
        if event
          div.photo-orga-event
            img(src=`/uploads/${event.photo}` alt="Flyer de l'évènement")
      .separator.top-space
      form.pure-u-1(action=`/events/add${event ? `/${event._id}`:""}?_csrf=${csrfToken}` method="POST" enctype="multipart/form-data")
        - const savedData = h.store.get("addevents-form-data")
        - const errorData = h.store.get("form-errors")
        - h.store.remove("form-errors")
        .pure-u-1
          if event
            .pure-u-1.text-center.top-space
              label.form-switch
                if event.published
                  input(type="checkbox" name="published" checked="checked")
                  i
                  span: strong Publié
                else
                  input(type="checkbox" name="published")
                  i
                  span: strong.unpublished-color Non publié
          .pure-u-1.top-space
            span.pure-u-1-8.icon!= h.icon("clipboard-pencil")
            input.pure-u-7-8(type="text" placeholder="Nom de l'évènement" name="name" value=`${savedData?savedData.name:(event ? event.name : "")}` class=`${errorData && errorData.includes("name")?"error":""}` required)
          .pure-u-1.top-space.text-center
            label.pure-button.pure-button-primary(for="fileUpload") Flyer de l'évènement
            input.show-for-sr#fileUpload(type="file" name="photo" accept="image/gif, image/png, image/jpeg")
            .file-upload-filename
          .pure-u-1.top-space
            label: strong Organisme créateur de l'évènement :
          .pure-u-1
            select#orga-select(name="organism")
            input#orga-id(type="hidden" value=`${event ? event.organism.id : orga}`)
          .pure-u-1.l-wrap.top-space
            .pure-u-1.top-space: label
              | Fuseau horaire&nbsp;:&nbsp;
              select#tz-select(name="tz")
                each tz in tzList
                  option(value=tz.value selected=(event ? tz.label == event.timezone : tz.selected))= tz.label
            .pure-u-1.top-space: label Début :
            .u-sm-5-12.l-content
              span.pure-u-1-8.icon!= h.icon("calendar")
              input.pure-u-7-8#dp1(type="date" name="startdate")
            .u-sm-5-12.l-content
              .clockpicker(data-placement="bottom" data-align="top" data-autoclose="true")
                span.pure-u-1-8.icon!= h.icon("clock")
                input.pure-u-7-8#starttime(type="text" name="starttime")
                input#start(type="hidden" name="start" value=`${savedData?savedData.start:(event?event.start:"")}`)
            .pure-u-1: label Fin :
            .u-sm-5-12.l-content
              span.pure-u-1-8.icon!= h.icon("calendar")
              input.pure-u-7-8#dp2(type="date" name="enddate")
            .u-sm-5-12.l-content
              .clockpicker(data-placement="bottom" data-align="top" data-autoclose="true")
                span.pure-u-1-8.icon!= h.icon("clock")
                input.pure-u-7-8#endtime(type="text" name="endtime")
                input#end(type="hidden" name="end" value=`${savedData?savedData.end:(event?event.end:"")}`)

          .pure-u-1.top-space
            label Que proposez vous ?
            textarea(name="description" placeholder="Un petit wiki pour décrire proprement l'évènement" value=`${savedData?savedData.description:(event ? event.description : "")}` class=`${errorData && errorData.includes("description")?"error":""}` required) #{savedData?savedData.description:(event ? event.description : "")}
          .pure-u-1.top-space
            label Sélectionnez le lieu de l'évènement sur la carte :
            #map.no-events
            span.input-group-label: i.fi-marker.size-36
            input.input-group-field#address(type="text" placeholder="Adresse" name="location[address]" value=`${savedData?savedData.location.address:(event ? event.location.address : "")}` class=`${errorData && errorData.includes("location.address")?"error":""}` readonly)
            input#longitude(type="hidden" name="location[coordinates][0]" value=`${savedData?savedData.location.coordinates[0]:(event ? event.location.coordinates[0] : "")}`)
            input#latitude(type="hidden" name="location[coordinates][1]" value=`${savedData?savedData.location.coordinates[1]:(event ? event.location.coordinates[1] : "")}`)
          .pure-u-1.top-space
            input.pure-button.success.button.expanded(type="submit" value=`${event ? "Valider" : "Créer"}`)

block customScripts
  script(src="/vendor/jquery/jquery.min.js")
  script(src="/vendor/jquery/jquery-clockpicker.min.js")
  script(src="/vendor/ol/ol.min.js")
  script(type="text/javascript").
    $(document).ready(function() {
      $(".clockpicker").clockpicker();
    });
