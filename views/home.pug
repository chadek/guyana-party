extends layout

include mixins/_customMapStyle
include mixins/_customMapScript

block customStyle
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  +customMapStyle()

block content
  .pure-u-g
    .pure-u-1
      .pure-u-1.u-lg-2-3.u-md-2-3
        .div-maps
          .ol-popup#popup
          #map.home
      .pure-u-1.u-lg-1-3.u-md-1-3
        .search
          input.search__input(type="search" autocomplete="off" placeholder="Recherche" name="search" value=`${search?search:''}`)
          input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .pure-u-1.search__button-group
          button#around.pure-button.button(title="Autour de moi") Autour de moi
          button#random.pure-button.button(title="Position aléatoire") AléaTown
            i(class="fa fa-random")
          button#new.pure-button.button(title="Créer un évènement") Créer un évènement
        ul.pure-u-1.result#resultelements

block customScripts
  +customMapScript()
