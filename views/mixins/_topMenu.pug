mixin topMenu()
  .pure-menu.pure-menu-horizontal.pure-menu-fixed
    unless currentPath == "/" || currentPath == "/events" || currentPath == "/login"
      .search.search__nav
        form(action="/events" method="POST")
          input.search__input--nav(type="text" placeholder="Chercher par th√®me ou par lieu..." name="search" )
          input(type="hidden" name="_csrf" value=`${csrfToken}`)
    unless user || isLogin
      ul.pure-menu-list
        li.pure-menu-item
          a.pure-menu-link(href="/login") Connexion / Inscription



