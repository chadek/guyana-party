mixin switchPublishEvent(event)
  .switch-publish-event
    input#id(type="hidden" value=event._id)
    label.form-switch.form-switch-public
      if event.public
        span Privé
        input(type="checkbox" checked="checked")
        i
        span: strong Public
      else
        span: strong Privé
        input(type="checkbox")
        i
        span Public
    label.form-switch.form-switch-publish(style="margin-left: 20px;")
      if event.status == "published"
        span Non publié
        input(type="checkbox" checked="checked")
        i
        span: strong Publié
      else
        span: strong.unpublished-color Non publié
        input(type="checkbox")
        i
        span Publié
